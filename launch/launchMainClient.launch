<?xml version="1.0"?>
<launch>

	<!-- Launch arguments -->
	<arg name="task_sequences_params" default="$(find adaptive_grasp_controller)/configs/task_sequences_params.yaml"/>

	<!-- Loading config file to param server -->
	<rosparam command="load" file="$(arg task_sequences_params)"/>

	<!-- Load main node -->
  	<node name="main_task_client_node" pkg="adaptive_grasp_controller" type="main_client" output="screen"/>

</launch>